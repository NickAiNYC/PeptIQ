{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@peptiq/types": ["packages/types/src"],
      "@peptiq/config": ["packages/config/src"],
      "@peptiq/scoring": ["packages/scoring/src"],
      "@peptiq/ingestion": ["packages/ingestion/src"],
      "@peptiq/audit": ["packages/audit/src"]
    }
  },
  "include": ["packages/**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
