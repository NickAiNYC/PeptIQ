{
  "name": "peptiq",
  "version": "0.1.0",
  "private": true,
  "description": "Peptide Quality Intelligence & Testing Platform",
  "scripts": {
    "dev:web": "cd apps/web && npm run dev",
    "dev:api": "cd apps/api && uvicorn main:app --reload",
    "dev:admin": "cd apps/admin && npm run dev",
    "db:generate": "cd packages/database && npx prisma generate",
    "db:migrate": "cd packages/database && npx prisma migrate dev",
    "db:push": "cd packages/database && npx prisma db push",
    "db:seed": "cd scripts && npx ts-node seed.ts",
    "db:studio": "cd packages/database && npx prisma studio",
    "lint": "echo 'No lint configured yet'",
    "test": "echo 'No tests configured yet'",
    "build": "echo 'No build configured yet'"
  },
  "dependencies": {
    "@prisma/client": "^5.0.0"
  },
  "devDependencies": {
    "prisma": "^5.0.0",
    "typescript": "^5.0.0",
    "ts-node": "^10.9.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
